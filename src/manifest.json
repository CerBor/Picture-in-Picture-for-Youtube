{
   "manifest_version": 2,
   "version": "1.3",
   "name": "Picture-in-Picture for Youtube",
   "description": "Add Picture-in-Picture button active",
   "content_scripts": [{
      "matches": ["https://www.youtube.com/*"],
      "js": ["script.js"],
      "run_at": "document_end"
   }],
   "browser_action": {
      "default_popup": "options.html",
      "default_icon": {
         "19": "images/icon-19.png",
         "38": "images/icon-38.png"
      }
   },
   "icons": {
      "128": "images/icon-128.png"
   },
   "permissions": [ "storage" ],
   "options_ui": {
      "open_in_tab": false,
      "page": "options.html"
   },
   "minimum_chrome_version": "71.0.3578.80"
}
